#:kivy 1.1.0


<FileSelectScreen>: #ホーム画面レイアウト
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height:100
            Button:
                text: 'クリックしてファイルを選択 or ドラッグ&ドロップ'
                on_release: root.show_load()
    



<LoadDialog>: #ホーム=>読み込み=>ファイル選択画面
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "キャンセル"
                on_release: root.cancel()

            Button:
                text: "読み込み"
                on_release: root.load(filechooser.path, filechooser.selection)
                

